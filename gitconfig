[user]
	name = Ronen Hilewicz
	email = github@ronen.hilewi.cz

[url "git@github.com:aserto-dev"]
	insteadOf = https://github.com/aserto-dev

[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	ui = always 

[core]
	whitespace = trailing-space,space-before-tab
	autocrlf = input
	excludesfile = ~/.gitignore
	editor = nvim

[diff]
	renames = copies
	mnemonicprefix = true
	renameLimit = 10000

[alias]
	br = branch
	ci = commit
	co = checkout
	di = diff

	l = log --oneline --decorate --graph
	r = rebase
	ri = rebase -i
	rc = rebase --continue
	rs = rebase ---skip
	cp = cherry-pick
	fp = push --force-with-lease

	sm = submodule
	st = status -s -b

	ru = remote update

	timeline = log --graph --branches --pretty=oneline --decorate

	ignored-files = ls-files --others -i --exclude-standard
	modified-files = ls-files -m
	untracked-files = ls-files -o --exclude-standard

[push]
	default = current

[mergetool "fugitive"]
	cmd = vim -f -c "Gdiff" "$MERGED"

[merge]
	tool = fugitive

				
[rebase]
	autosquash = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[rerere]
	enabled = true
[init]
	defaultBranch = main
[pull]
	ff = only
